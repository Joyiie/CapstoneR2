@page
@model CapstoneR2.Pages.Manage.Patients.PDelete
@{
}
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <h3>Delete</h3>
                    <div class="form-group">
                        <input type="hidden" asp-for="View.ID" />
                        <label asp-for="View.FirstName">FirstName</label>
                        <input type="text" class="form-control" placeholder="Enter role name" asp-for="View.FirstName" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.MiddleName">MiddleName</label>
                        <input type="text" class="form-control" placeholder="Enter description" asp-for="View.MiddleName" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.LastName">LastName</label>
                        <input type="text" class="form-control" placeholder="Enter abbreviation" asp-for="View.LastName" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.BirthDate">BirthDate</label>
                        <input type="datetime-local" class="form-control" placeholder="DateTime" asp-for="View.BirthDate">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Gender">Sex</label>
                        <select class="form-control" id="Sex" asp-for="View.Gender">
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                     <div class="form-group">
                        <label asp-for="View.Address">Address</label>
                        <input type="text" class="form-control" placeholder="Enter abbreviation" asp-for="View.Address" disabled>
                    </div>
                    
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="~/manage/roles" class="btn btn-secondary">Cancel</a>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
