@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="row justify-content-md-center">
        <div class="container col-4">

            <div class="card border border-dark bg-mustardlite m-2">
                <div class="card-header justify-content-center">   
                    <h3 class="justify-content-center fw-bold">LOG IN</h3>
                </div>
                <div class="card-body">
                    <div class="container-lg mx-1">
                        <form method="Post">
                            <div class="form-group justify-content-center">                                
                                <label asp-for="View.Email">Enter Your Email</label>
                                <input type="email" class="form-control" placeholder="Enter user name" asp-for="View.Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="View.Password">Password</label>
                                <input type="password" class="form-control" placeholder="Enter password" asp-for="View.Password">
                            </div>
                            <div class="form-group alert-danger">
                                @Html.ValidationSummary()
                            </div>                      
                                <div class="row align-content-center justify-content-center">                                                      
                                    <button type="submit" class=" col-5 btn btn-primary border border-light justify-content-center">Login</button>                                                                                                                                                                                                                         
                                </div>     
                                <div class="row align-content-center justify-content-center">
                                    <a href="~/Account/SignUp" class=" col-5 btn btn-primary border border-light justify-content-center">Sign Up</a>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>

